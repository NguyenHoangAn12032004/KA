# ================================
# RECRUITMENT PLATFORM - ENHANCED
# Environment Configuration v2.0
# ================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/recruitment_platform"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server
PORT=5000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# AI Configuration (Gemini)
GEMINI_API_KEY="your-gemini-api-key-here"

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Configuration
EMAIL_FROM="noreply@recruitmentplatform.com"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Rate Limiting (Enhanced)
RATE_LIMIT_WINDOW_MS=60000    # 1 minute
RATE_LIMIT_MAX=1000           # 1000 requests per minute (development)
RATE_LIMIT_WHITELIST=""       # Comma-separated IPs to whitelist

# Logging Configuration
LOG_LEVEL=info                # debug, info, warn, error

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME=true
ENABLE_CACHING=true
ENABLE_PWA=true

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Redis (for production - optional)
# REDIS_URL="redis://localhost:6379"

# Monitoring & Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Demo Mode (for presentation)
DEMO_MODE="true"
DEMO_COMPANY_EMAIL="demo@company.com"
DEMO_STUDENT_EMAIL="demo@student.com"
